<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SidamuktiActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#008000"
                android:padding="@dimen/padding"
                android:text="Sidamukti"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="Lokasi penelitian ini berada di Daerah Sidamukti di Kabupaten Pangalengan Kabupaten Bandung terletak pada koordinat 7°10'31.4 LS dan 107°33'58.4 BT Prediksi jarak jangkauan longsor di lokasi penelitian " />


            <ImageView
                android:layout_width="358dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:src="@drawable/sd_7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="Analisis bidang gelincir lintasan 1  berdasarkan pemodelan GeoStudio SLOPE/W" />

            <ImageView
                android:layout_width="394dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:src="@drawable/sd_6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="Analisis bidang gelincir lintasan 1  berdasarkan pemodelan pyBIMstab Parameter yang digunakan dalam analisis jarak jangkauan dan kecepatan longsor dengan pendekatan pusat massa pada pemodelan pyBIMstab dan geo studio pada lintasan Prediksi jarak jangkauan longsor di lokasi penelitian lokasi 2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:src="@drawable/sd_5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="Analisis bidang gelincir lintasan 2  berdasarkan pemodelan GeoStudio SLOPE/W" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:src="@drawable/sd_4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="Analisis bidang gelincir lintasan 2 berdasarkan permodelan pyBIMstab" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:src="@drawable/sd_3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="@string/sidamuk" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:src="@drawable/sd_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="Hasil jarak jangkauan lintasan 1" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:src="@drawable/sd_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="Hasil jarakjangkauan lintasan 2" />

